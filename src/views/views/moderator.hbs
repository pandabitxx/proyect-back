<div class="container">
    <h2 class="mb-4">Esta es la vista de Moderador</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Id</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Código</th>
                <th>Stock</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            {{#each allProducts}}
            <tr>
                <td>{{name}}</td>
                <td>{{_id}}</td>
                <td>{{description}}</td>
                <td>${{price}}</td>
                <td>{{code}}</td>
                <td>{{stock}}</td>
                <td>
                    <a href="/products/edit/{{_id}}" class="btn btn-primary">
                        <i class="fas fa-pencil-alt"></i> Editar
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>