<div class="col-md-6 offset-md-3 contact rounded-5">
    <form action="/products/edit/{{id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <!-- Resto del formulario... -->

        <div class="mb-3">
            <label for="nameProduct" class="form-name p">Nombre del producto</label>
            <input value="{{ name }}" type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp"  required>
        </div>
        <div class="mb-3">
            <label for="descriptionProduct" class="form-description p">Descripción</label>
            <input type="text" name="description" value="{{ description }}" class="form-control" id="descripción" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
            <label for="priceProduct" class="form-price p">Precio </label>
            <input type="text" name="price" value="{{ price }}" class="form-control" id="price" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
            <label for="thumbnailProduct" class="form-route p">Thumbnail</label>
            <input type="text" name="thumbnail" value="{{ thumbnail }}" class="form-control" id="thumbnail" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
            <label for="codeProduct" class="form-code p">código</label>
            <input type="text" name="code" value="{{ code }}" class="form-control" id="code" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
            <label for="disabledSelect" class="form-stock p">Stock</label>
            <select name="stock" id="disabledSelect" class="form-select" required>
                <option class="p" value="" disabled selected>Seleccione</option>
                <option class="p" value="Available">Disponible</option>
                <option class="p" value="Out of Stock">Sin Existencias</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mb-5" data-aos="fade-left">Enviar</button>
        <!-- Resto del formulario... -->
    </form>
</div>
